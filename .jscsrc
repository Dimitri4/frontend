        "static/src/javascripts/components/**",
        "static/src/javascripts/vendor/**",
        "static/src/javascripts/projects/common/utils/atob.js",
        "static/src/javascripts/projects/common/utils/picturefill.js",
        "static/test/javascripts/components/**",
        "static/src/deploys-radiator/node_modules/**",
        "static/src/deploys-radiator/jspm_packages/**",
        "static/src/deploys-radiator/target/**",
        "static/src/deploys-radiator/config.js"
    ]
}
